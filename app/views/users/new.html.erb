<%if params[:project_user].nil?%>
<link rel="icon" type="image/ico" href="assets/add.png">
</head>
<body>
	<div class="wrapper">
		<div class="google-header-bar">
			<div class="header content clearfix">
			</div>
		</div>
		<div class="main content clearfix">
			<div class="sign-in">
				<div class="signin-box">
					<h2>Sign up</h2>
					<%= form_for @user,:validate=>true do |f|%>
					<%= f.hidden_field :invitation_token %>
					<div class="field email-div">
						<%= f.label :name,:class=>"email-label" %>
						<%= f.text_field :name ,:id=>"Email"%>
					</div>
					<div class="field email-div">
						<%= f.label :email,:class=>"email-label" %>
						<%= f.text_field :email ,:id=>"Email"%>
					</div>
					<div class="field passwd-div">
						<%= f.label :password,:class=>"passwd-label" %>
						<%= f.password_field :password %>
					</div>
					<div class="field passwd-div">
						<%= f.label :password_confirmation,:class=>"passwd-label" %>
						<%= f.password_field :password_confirmation %>
					</div>
					<div class="signup_button">
						<%= f.submit "Register",:id=>"signIn",:class=>"g-button g-button-submit"%>
					</div>
					
					<%end%>
				</div>
			</div>
			<div class="product-info mail">
				<div class="product-headers">
					<h1 class="redtext">Digital Library Development Management Tool</h1>
					<h2>Structuring the world of digital library management (DLM)</h2>
				</div>
				<p>
					Building a digital library is no easy task. Managing development is made easier and more streamlined
					using the DLM Tool. It supports project management, yet is tailored for digital librarians. 
				</p>
				<ul class="features">
					<li>
						<%=image_tag("group.png",:alt=>"Collaboration")%>
						<%=image_tag("world.png",:alt=>"Collaboration")%>
						<p class="title redtext">
							Collaborate
						</p>
						<p>
							Share tasks, projects and calendars with people located anywhere in the world.
						</p>
					</li>
					<li>
						<%=image_tag("timeline_marker.png",:alt=>"Timeline")%>
						<%=image_tag("table.png",:alt=>"Timeline")%>
						<p class="title redtext">
							Fluid view
						</p>
						<p>
							Make and modify timelines, tables and lists of project phases
						</p>
					</li>
					<li>
						<%=image_tag("lock.png",:alt=>"protected access")%>
						<%=image_tag("page_white_zip.png",:alt=>"Protected access")%>
						<p class="title redtext">
							Protected access
						</p>
						<p>
							Create private projects made vieweable only for select people
						</p>
					</li>
				</ul>
				<ul class="mail-links">
					<li></li>
				</ul>
				<div class="mailPromo"></div>
		</div>

<%else%>
	<%content_for :side do%>
		<%if !current_project.nil?%>
			<%= render 'users_sidemenu'%>
		<%end%>
	<%end%>

	<%content_for :main do%>
		<%= render 'project_user'%>
	<%end%>
<%end%>
